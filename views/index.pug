                                label First Name
                                input(
                                    data-smart="input"
                                    name="name"
                                )
                            .form-group
                                label Last Name
                                input(
                                    data-smart="input"
                                    name="lastName"
                                )
                            .spacer
                            button(data-smart = {
                                action: "removeItem",
                            }) âž–
