extends layout.pug
block mainForm
    header
        h1 SmartForm Example
        small
            p
                | This example demonstrates how to create a simple form
                | layout that can almost responsively expand and stack
                | depending on the width of the page.
            p Â 
    .form-group
        label Company
        input.input-control(
            data-smart="input"
            name="company"
            type="text"
        )
    .form-group
        label Address
        textarea.input-control(
            data-smart="input"
            name="address"
        )
    .form-group
        label City,State,Zip
        input.input-control(
            data-smart="input"
            name="city"
            placeholder='City'
            style='flex: 6'
        )
        input.input-control(
            data-smart="input"
            name="state"
            placeholder='State'
            style='flex:1'
        )
        input.input-control(
            data-smart="input"
            name=postCode
            placeholder='Postal Code'
            style='flex:2'
        )
    div
        .form-group
            label
