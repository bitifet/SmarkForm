extends layout.pug
block mainForm
    section
        .form-group.h1 Company
        .input-group
            label Corporate Name
            input(
                data-smark
                name="company"
                type="text"
                placeholder="Company Name"
            )
        .input-group
            label Address
            textarea(
                data-smark
                name="address"
                placeholder="Address"
            )
        .form-group
            label City,State,Zip
            input(
                data-smark
                name="city"
                placeholder='City'
                style='flex: 6'
            )
            input(
                data-smark
                name="state"
                placeholder='State'
                style='flex:1'
            )
            input(
                data-smark
                name="postCode"
                placeholder='Postal Code'
                style='flex:2'
            )
    section
        .form-group.h2
            span.foldButton(
                data-smark={
                    action: "fold",
                    for: "employees",
                    foldedClass: "folded",
                }
            )
            span
                span Employees (
                span(data-smark={
                    action: "count",
                    for: "employees",
                })
                span )
            .form-group
                .spacer
                button(data-smark = {
                    action: "addItem",
                    for: "employees",
                    autoscroll: "self",
                }, title="Add employee") ‚ûï
                button(data-smark = {
                    action: "removeItem",
                    for: "employees",
                    keep_non_empty: true,
                }, title="Remove employees from bottom priorizing empties") ‚ûñ
                button(data-smark = {
                    action: "removeItem",
                    for: "employees",
                    to: "*",
                    keep_non_empty: true,
                }, title="Clear all empty employees") üßπ
        .form-group
            .form-group(data-smark = {
                type: "list",
                exportEmpties: true,
                name: "employees",
                min_items: 0,
            })
                fieldset.form-group.aside(data-smark={
                    exportEmpties: false
                })
                    .form-group.spacer
                        .form-group
                            .input-group
                                label First Name
                                input(
                                    data-smark
                                    name="name"
                                    placeholder="Name"
                                )
                            .input-group
                                label Last Name
                                input(
                                    data-smark
                                    name="lastName"
                                    placeholder="Surnme"
                                )
                        .form-group
                            +inputlist("Telephones")(
                                name="phones"
                                type="tel",
                                max_items=4,
                                placeholder="Telephone",
                                removeFailback="clear"
                            )
                            +inputlist("Emails")(
                                type="email",
                                max_items=4,
                                placeholder="Email",
                                removeFailback="clear"
                            )
                    button.inline(data-smark = {
                        action: "removeItem",
                    }, title="Remove this employee") ‚ûñ
        .form-group.f2
            .spacer
            button(data-smark = {
                action: "addItem",
                for: "employees",
                autoscroll: "elegant",
            }, title="Add employee") ‚ûï
            button(data-smark = {
                action: "removeItem",
                for: "employees",
                keep_non_empty: true,
                autoscroll: "elegant",
            }, title="Remove employees from bottom priorizing empties") ‚ûñ
            button(data-smark = {
                action: "removeItem",
                for: "employees",
                to: "*",
                autoscroll: "elegant",
                keep_non_empty: true,
            }, title="Clear all empty employees") üßπ
        .form-group.f1
            .spacer
            button(data-smark = {
                action: "empty",
            }, title="Clear form data") ‚ùå Cancel
            button(data-smark = {
                action: "export",
            }, title="Submit form data") üíæ Submit
mixin inputlist(label="Annonymous")
    .input-group
        -
            //- Acccepted attributes:
            const {
                name=label.toLowerCase(),
                min_items,
                max_items,
                removeFailback, // none / clear / throw
                ...atts // Extra attributes for inputs (placeholder, etc...)
            } = attributes;
        label= label
        div(data-smark = {
            name: name,
            type: "list",
            of: "singleton",
            min_items,
            max_items,
        })
            .singleton
                button(data-smark = {
                    action: "addItem",
                }, title="Add new item below") ‚ûï
                input(data-smark)&attributes(atts)
                button(data-smark = {
                    action: "removeItem",
                    failback: removeFailback,
                }, title="Remove this item") ‚ûñ
