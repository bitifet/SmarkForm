extends layout.pug
block mainForm
    .section
        .form-group.h1 Company
        .form-group
            label Corporate Name
            input(
                data-smark
                name="company"
                type="text"
                placeholder="Company Name"
            )
        .form-group
            label Address
            textarea(
                data-smark
                name="address"
                placeholder="Address"
            )
        .form-group
            label City,State,Zip
            input(
                data-smark
                name="city"
                placeholder='City'
                style='flex: 6'
            )
            input(
                data-smark
                name="state"
                placeholder='State'
                style='flex:1'
            )
            input(
                data-smark
                name="postCode"
                placeholder='Postal Code'
                style='flex:2'
            )
    .section
        .form-group.h2.no-wrap
            button.foldButton(
                data-smark={
                    action: "fold",
                    for: "employees",
                    foldedClass: "folded",
                }
            )
            span
                span Employees (
                span(data-smark={
                    action: "count",
                    for: "employees",
                })
                span )
            .spacer
            button(data-smark = {
                action: "addItem",
                for: "employees",
                autoscroll: "self",
            }) ‚ûï
            button(data-smark = {
                action: "removeItem",
                for: "employees",
                keep_non_empty: true,
            }, title="Remove last non-empty employee") ‚ûñ
            button(data-smark = {
                action: "removeItem",
                for: "employees",
                to: "*",
                keep_non_empty: true,
            }, title="Clear all empty employee") üßπ
        .form-group.no-wrap
            .form-group(data-smark = {
                type: "list",
                exportEmpties: true,
                name: "employees",
                min_items: 0,
            })
                fieldset.form-group(data-smark={
                    exportEmpties: false
                })
                    .form-group.spacer.no-wrap
                        .form-group
                            .form-group
                                label First Name
                                input(
                                    data-smark="input"
                                    name="name"
                                    placeholder="Name"
                                )
                            .form-group
                                label Last Name
                                input(
                                    data-smark="input"
                                    name="lastName"
                                    placeholder="Surnme"
                                )
                        .spacer
                        button(data-smark = {
                            action: "removeItem",
                        }) ‚ûñ
                    .form-group
                        +inputlist("Telephones")(
                            name="phones"
                            type="tel",
                            max_items=4,
                            placeholder="Telephone",
                            removeFailback="clear"
                        )
                        +inputlist("Emails")(
                            type="email",
                            max_items=4,
                            placeholder="Email",
                            removeFailback="clear"
                        )
        .form-group.f2.no-wrap
            .spacer
            button(data-smark = {
                action: "addItem",
                for: "employees",
                autoscroll: "elegant",
            }) ‚ûï
            button(data-smark = {
                action: "removeItem",
                for: "employees",
                keep_non_empty: true,
                autoscroll: "elegant",
            }, title="Remove last non-empty employee") ‚ûñ
            button(data-smark = {
                action: "removeItem",
                for: "employees",
                to: "*",
                autoscroll: "elegant",
                keep_non_empty: true,
            }, title="Clear all empty employees") üßπ
        .form-group.f1.no-wrap
            .spacer
            button(data-smark = {
                action: "cancel",
            }) ‚ùå Cancel
            button(data-smark = {
                action: "submit",
            }) üíæ Submit
mixin inputlist(label="Annonymous")
    .form-group
        -
            //- Acccepted attributes:
            const {
                name=label.toLowerCase(),
                min_items,
                max_items,
                removeFailback, // none / clear / throw
                ...atts // Extra attributes for inputs (placeholder, etc...)
            } = attributes;
        label= label
        div(data-smark = {
            name: name,
            type: "list",
            of: "singleton",
            min_items,
            max_items,
        })
            .form-group.no-wrap
                button(data-smark = {
                    action: "addItem",
                }) ‚ûï
                input(data-smark)&attributes(atts)
                button(data-smark = {
                    action: "removeItem",
                    failback: removeFailback,
                }) ‚ûñ
