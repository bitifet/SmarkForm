extends include/layout.pug
include include/mixins.pug
block append properties
    -
        var title = "SmarkForm TODO-List Example";
block mainForm
    section
      .form-group.h1
        .spacer
        button(data-smark='{"action":"import","for":"tasklist"}') üìÇ Import (JSON)
        button(data-smark='{"action":"export","for":"tasklist"}') üíæ Export (JSON)
      .form-group(data-smark={
          type:"list",
          name:"tasklist",
          exportEmpties: true,
          min_items:0
      })
        fieldset.form-group.aside.reverse(data-smark={
            exportEmpties: false
        })
          button.inline(data-smark='{"action":"removeItem"}', title='Remove task') ‚ùå
          .form-group.spacer
            .form-group
                input(data-smark, name='title', type='text', placeholder='Task title')
            .form-group
                +inputlist("Goals")(
                    name="goals"
                    type="text",
                    max_items=100,
                    placeholder="New goal...",
                    removeFailback="clear"
                )
      .form-group.f1(style='text-align: right')
        .spacer
        button(data-smark = {
            action: "empty",
            for: "tasklist",
        }, title="Clear form data") ‚ùå Clear all
        button(data-smark = {
            action: "removeItem",
            for: "tasklist",
            to: "*",
            autoscroll: "elegant",
            keep_non_empty: true,
        }, title="Clear all empty tasks") üßπ Clear empty
        button(data-smark='{"action":"addItem","for":"tasklist"}') ‚ûï Add new task


