mixin inputlist(label="Annonymous")
    .input-group
        -
            //- Acccepted attributes:
            const {
                name=label.toLowerCase(),
                min_items,
                max_items,
                removeFailback, // none / clear / throw
                sortable,
                ...atts // Extra attributes for inputs (placeholder, etc...)
            } = attributes;
        strong(data-smark="label")= label
        div(data-smark = {
            name: name,
            type: "list",
            of: "input",
            sortable: sortable,
            min_items,
            max_items,
        })
            .singleton
                button(data-smark = {
                    action: "removeItem",
                    failback: removeFailback,
                    hotkey: "-",
                }, title="Remove this item")
                    span(role='img', aria-label='Remove this item') ➖
                input(data-smark)&attributes(atts)
                button(data-smark = {
                    action: "addItem",
                    hotkey: "+",
                }, title="Add new item below")
                    span(role='img', aria-label='Add new item') ➕
