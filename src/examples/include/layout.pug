doctype html
block properties
    -
        const CDN = `https://cdn.jsdelivr.net/gh/bitifet/SmarkForm@${pkg.version}`;
        const [
            css_layout,
            css_styles,
            js_smarkform,
        ] = [
            '/examples/smarkform_layout_sample.css',
            '/examples/smarkform_styles_sample.css',
            '/dist/SmarkForm.umd.js',
        ].map(path=>(
            isProduction ? `${CDN}${path}`
            : `..${path}?foo=${Math.random()}`
        ));
html(style='--background-image-url: url("https://picsum.photos/id/972/800.jpg");')
    head
        title=title
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        meta(http-equiv='Content-Type', content='text/html; charset=utf-8')
        link(rel="stylesheet", href=css_layout)
        link(rel="stylesheet", href=css_styles)
        block background_switcher
        script(defer src=js_smarkform)
        include ./sample_controller.pug
    body
        div.main-container
            div#main-form.smarkForm
                header
                    h1=title
                    block credits

                block mainForm
